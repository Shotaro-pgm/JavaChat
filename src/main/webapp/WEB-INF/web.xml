<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
                             http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5">


<display-name>JavaCaht</display-name>

<servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>servlet.</servlet-class>
</servlet>
<servlet>
    <servlet-name>ViewChatroomServlet</servlet-name>
    <servlet-class>servlet.ViewChatroomServlet</servlet-class>
</servlet>
<servlet>
    <servlet-name>SignupServlet</servlet-name>
    <servlet-class>servlet.SignupServlet</servlet-class>
</servlet>
<servlet>
    <servlet-name>SendMessageServlet</servlet-name>
    <servlet-class>servlet.SendMessageServlet</servlet-class>
</servlet>
<servlet>
    <servlet-name>ChatroomListServlet</servlet-name>
    <servlet-class>servlet.ChatroomListServlet</servlet-class>
</servlet>

<servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/login</url-pattern>
</servlet-mapping>
<servlet-mapping>
    <servlet-name>ViewChatroomServlet</servlet-name>
    <url-pattern>/viewchat</url-pattern>
</servlet-mapping>
<servlet-mapping>
    <servlet-name>SignupServlet</servlet-name>
    <url-pattern>/signup</url-pattern>
</servlet-mapping>
<servlet-mapping>
    <servlet-name>SendMessageServlet</servlet-name>
    <url-pattern>/send</url-pattern>
</servlet-mapping>
<servlet-mapping>
    <servlet-name>ChatroomListServlet</servlet-name>
    <url-pattern>/chatroomlist</url-pattern>
</servlet-mapping>

<welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
</welcome-file-list>

</web-app>